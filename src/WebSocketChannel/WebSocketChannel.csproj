<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <RootNamespace>Devlooped.Net</RootNamespace>
    <ImplicitUsings>true</ImplicitUsings>
    <PackageId>WebSocketChannel</PackageId>
    <Description>High-performance System.Threading.Channels API adapter for System.Net.WebSockets</Description>
    <PackageReadmeFile>readme.md</PackageReadmeFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.0.0" PrivateAssets="all" />
    <PackageReference Include="System.Threading.Channels" Version="5.0.0" />
  </ItemGroup>

  <ItemGroup>
    <Using Include="System.Buffers" />
    <Using Include="System.Net.WebSockets" />
    <Using Include="System.Threading.Channels" />
  </ItemGroup>
  
</Project>
